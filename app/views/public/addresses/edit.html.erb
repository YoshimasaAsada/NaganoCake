<div class="container">
<%= form_with model:@address, url: address_path, local:true do |f| %>
<div class="form-group row">
    <div class="col-3">
    <%= f.label :postal_code, "郵便番号" %>
    </div>
    <div class="col-7">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "address", class:"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :address, "住所" %>
    </div>
    <div class="col-7">
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :name, "宛名" %>
    </div>
    <div class="col-7">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
    </div>
  </div>
  <%= f.submit "新規登録", class:"btn btn-success" %>
 <% end %>
 </div>