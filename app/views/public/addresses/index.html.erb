<div class="container">
<%= form_with model:@address, url: addresses_path, local:true do |f| %>
<div class="form-group row">
    <div class="col-3">
    <%= f.label :postal_code, "郵便番号" %>
    </div>
    <div class="col-7">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "address", class:"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :address, "住所" %>
    </div>
    <div class="col-7">
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :name, "宛名" %>
    </div>
    <div class="col-7">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
    </div>
  </div>
  <%= f.submit "新規登録", class:"btn btn-success" %>
 <% end %>
 
 
 
 <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">郵便番号</th>
      <th scope="col">住所</th>
      <th scope="col">宛名</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
      <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address), class:"btn btn-success ml-5"%><%= link_to "削除する", address_path(address), method: :delete, class:"btn btn-danger ml-5"%></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>