<div class="container">
<div class="row">
<h1>商品一覧</h1>
<div class="d-flex align-items-center">全<%= @items.count %>件</div>
</div>

<div class="row">
<% @items.each do |item| %>
<div class="col-3">
<%= link_to item_path(item) do %>
<%= attachment_image_tag item, :image, width: '80%', height: '60%' %><br>
<%= item.name %><br>
¥<%= item.price.to_s(:delimited) %>
<% end %>
</div>

<% end %>
</div>
</div>