<div class="container">
<h2></h2>新規会員登録</h2></br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="form-group row">
    <div class="col-2">
    <%= f.label :last_name, "名前" %>
    </div>
    <div class="col-1">
    <%= f.label :last_name, "(姓)" %>
    </div>
    <div class="col-3">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control" %>
    </div>
    <div class="col-1">
    <%= f.label :first_name, "(名)" %>
    </div>
    <div class="col-3">
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-2">
    <%= f.label :last_name, "フリガナ" %>
    </div>
    <div class="col-1">
    <%= f.label :last_name_kana, "(セイ)" %>
    </div>
    <div class="col-3">
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class:"form-control" %>
    </div>
    <div class="col-1">
    <%= f.label :first_name_kana, "(メイ)" %>
    </div>
    <div class="col-3">
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="col-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    </div>
    <div class="col-3">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :address, "住所" %>
    </div>
    <div class="col-7">
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
    </div>
    <div class="col-3">
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    </div>
    <div class="col-3">
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
    <%= f.label :password_confirmation, "パスワード確認用" %>
    </div>
    <div class="col-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div>
  </div>

  <div class="actions col-3 offset-3">
    <%= f.submit "新規登録", class:"btn btn-success btn-block"%>
  </div><br>
<% end %>

<h2>既に登録済みの方</h2>
<div class="row">
<div class="col-4 offset-1">
<p><%= render "public/shared/links" %>からログインしてください</p>
</div>
</div>
</div>
