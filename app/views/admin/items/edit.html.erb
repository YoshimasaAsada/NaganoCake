<div class="container">
<%= form_with model:@item, url: admin_item_path(@item), local:true do |f| %>
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :image, "商品画像" %>
    </div>
    <div class="col-3">
    <%= f.attachment_field :image, placeholder: "ファイルを選択" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :name, "商品名" %>
    </div>
    <div class="col-3">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :introduction, "商品説明" %>
    </div>
    <div class="col-3">
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class:"form-control", rows:"5" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :price, "ジャンル" %>
    </div>
    <div class="col-3">
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :price, "税抜価格" %>
    </div>
    <div class="col-3">
    <%= f.text_field :price, autofocus: true, autocomplete: "price", class:"form-control" %>
    </div>
    <div class="col">
    円
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :is_active, "販売ステータス" %>
    </div>
    <div class="col-3">
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "販売中" %>
  　<%= f.radio_button :is_active, :false %>
  　<%= f.label :is_active, "販売停止中" %>
    </div>
  </div>
  <%= f.submit "変更を保存", class:"btn btn-success" %>
 <% end %>
 </div>
 </div>