<div class="container">
<div class="row">
    <div class="col-3">
    <%= "会員ID" %>
    </div>
    <div class="col-3">
    <%= @end_user.id %>
    </div>
</div>
 <div class="row">
     <div class="col-3">
    <%= "氏名" %>
    </div>
    <div class="col-3">
    <%= @end_user.last_name %><%= @end_user.first_name %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-3">
    <%= "フリガナ" %>
    </div>
    <div class="col-3">
    <%= @end_user.last_name_kana %><%= @end_user.first_name_kana %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-3">
    <%= "メールアドレス" %>
    </div>
    <div class="col-3">
    <%= @end_user.email %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-3">
    <%= "郵便番号(ハイフンなし)" %>
    </div>
    <div class="col-3">
    <%= @end_user.postal_code %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-3">
    <%= "住所" %>
    </div>
    <div class="col-7">
    <%= @end_user.address %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-3">
    <%= "電話番号(ハイフンなし)" %>
    </div>
    <div class="col-3">
    <%= @end_user.phone_number %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
    <%= "退会ステータス" %>
    </div>
    <div class="col-3">
          <% if @end_user.is_unsubscribed == true %>
          退会
          <% else %>
          有効
          <% end %>
    </div>
  </div>
  <%= link_to "編集する", edit_admin_customer_path(@end_user), class:"btn btn-success"  %>
  <%= link_to "注文履歴一覧を見る", root_path , class:"btn btn-success" %>
  </div>

