<div class="container">
<h1>ジャンル一覧、追加</h1>

<% if @genre_new.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @genre_new.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@genre_new, url: admin_genres_path, local:true do |f| %>
<div class="form-group row">
<div class="col-3">
<%= f.label :name, "ジャンル名" %>
</div>
<div class="col-3">
<%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
</div>
<div class="col-3">
<%= f.submit "新規登録", class:"btn btn-success" %>
</div>
</div>
<% end %>

<div class="row">
<table class="table col-4">
  <thead>
    <tr>
      <th scope="col">ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>