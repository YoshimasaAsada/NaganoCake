<div class="container">
<table class="table">
  <thead>
    <tr>
      <th scope="col">購入日時</th>
      <th scope="col">購入者</th>
      <th scope="col">注文個数</th>
      <th scope="col">注文ステータス</th>
    </tr>
  </thead>
  <tbody>
      <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at.to_s(:datetime_jp), admin_order_path(order) %></td>
      <td><%= order.end_user.last_name + order.end_user.first_name %></td>
      <% @sum = 0 %>
      <td><% order.order_details.each do |order_detail| %>
      <% @sum += order_detail.amount %>
      <% end %>
      <%= @sum.to_s(:delimited) %>
      </td>
      <td><%= order.status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>